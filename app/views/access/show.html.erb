<div class="row" id="show-row">
	<% params[:p_id] ? @tem=@portals.find(params[:p_id]) : @tem=@portals.first%>
	<div class="panel panel-default">
    	<div class="panel-heading">
	    	<h3>Motivation of The Day:</h3>
	  	</div>
